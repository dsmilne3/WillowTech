services:
  node-exporter:
    image: prom/node-exporter:latest
    command:
      - --collector.disable-defaults
      - --collector.stat
      - --collector.time
      - --collector.cpu
      - --collector.loadavg
      - --collector.hwmon
      - --collector.meminfo
      - --collector.diskstats
    container_name: Prometheus-Node-Exporter
    hostname: prom-node-exporter
    networks:
      - telemetry-net
    mem_limit: 256m
    mem_reservation: 64m
    cpu_shares: 512
    security_opt:
      - no-new-privileges=true
    read_only: true
    user: 1026:100
    healthcheck:
      test: wget --no-verbose --tries=1 --spider http://localhost:9100/
    restart: on-failure:5

  snmp-exporter:
    image: prom/snmp-exporter:latest
    command:
      - "--config.file=/etc/snmp_exporter/snmp.yml"
    container_name: Prometheus-SNMP-Exporter
    hostname: prom-snmp-exporter
    networks:
      - telemetry-net
    mem_limit: 256m
    mem_reservation: 64m
    cpu_shares: 512
    security_opt:
      - no-new-privileges:true
    read_only: true
    user: 1026:100
    healthcheck:
      test: wget --no-verbose --tries=1 --spider http://localhost:9116/ || exit 1
    volumes:
      - /volume2/docker/grafana/snmp:/etc/snmp_exporter/:ro
    restart: on-failure:5

  cadvisor:
    image: gcr.io/cadvisor/cadvisor:latest
    command:
      - "--docker_only=true"
    container_name: Prometheus-cAdvisor-Exporter
    hostname: prom-cadvisor-exporter
    networks:
      - telemetry-net
    mem_limit: 256m
    mem_reservation: 64m
    cpu_shares: 512
    security_opt:
      - no-new-privileges=true
    read_only: true
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
    restart: on-failure:5

  grafana-alloy:
    image: grafana/alloy:latest
    container_name: Grafana-Alloy
    hostname: grafana-alloy
    networks:
      - telemetry-net
    mem_limit: 512m
    mem_reservation: 128m
    cpu_shares: 512
    security_opt:
      - no-new-privileges=true
    user: 1026:100
    command:
      - run
      - --server.http.listen-addr=0.0.0.0:12345
      - --storage.path=/var/lib/alloy/data
      - /etc/alloy/config.alloy
    volumes:
      - /volume2/docker/grafana/alloy/config.alloy:/etc/alloy/config.alloy:ro
      - /volume2/docker/grafana/alloy/data:/var/lib/alloy/data:rw
    healthcheck:
      test: wget --no-verbose --tries=1 --spider http://localhost:12345/-/ready || exit 1
    restart: on-failure:5

networks:
  telemetry-net:
    name: telemetry-net
    ipam:
      config:
        - subnet: 192.168.52.0/24
